<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
    />
    <link rel="stylesheet" href="css/login.css" />
  </head>
  <body>
    <div class="container" id="container">
      <div class="form-container sign-up-container">
        <form action="/signup" method="post">
          <h1>Create Account</h1>
          <input type="text" placeholder="Your Address" name="address" />
          <input type="email" placeholder="Email" name="email" />
          <input type="password" placeholder="Password" name="password" />
          <div>
            <div class="mom-type">
              <input type="radio" name="type" value="first-time-mom" />
              <label for="first-time-mom">First-time mom</label>
            </div>
            <div class="mom-type">
              <input type="radio" name="type" value="seasoned-mom" />
              <label for="seasoned-mom">Seasoned mom</label>
            </div>
          </div>
          <button type="submit">Sign Up</button>
        </form>
      </div>
      <div class="form-container sign-in-container">
        <form action="/login" method="post">
          <h1>Sign in</h1>
          <input type="email" placeholder="Email" name="email" />
          <input type="password" placeholder="Password" name="password" />
          <button type="submit">Sign In</button>
        </form>
      </div>
      <div class="overlay-container">
        <div class="overlay">
          <div class="overlay-panel overlay-left">
            <h1>Hello, Mommy!</h1>
            <p>Welcome to Mommy Circle, join our village!</p>
            <p>- OR -</p>
            <button class="ghost" id="signIn">Sign In</button>
          </div>
          <div class="overlay-panel overlay-right">
            <h1>Welcome Back!</h1>
            <p>
              To keep connected with us please login with your personal info.
            </p>
            <p>- OR -</p>
            <button class="ghost" id="signUp">Sign Up</button>
          </div>
        </div>
      </div>
    </div>

    <!-- partial -->
    <script src="login.js"></script>
  </body>
</html>
